{
  "package": {
    "description": "远程组件项目",
    "private": false,
    "scripts": {
      "init": "npm i --legacy-peer-deps",
      "create": "modules-dev-create",
      "lint-staged": "lint-staged",
      "start": "cross-env PORT=3001 MODULES_DEV_PUBLIC_URL=/ craco start",
      "build": "cross-env COMPONENTS_NAME=components-name MODULES_DEV_PUBLIC_URL=/components-name  craco build",
      "test": "craco test --coverage",
      "prepare": "husky install"
    },
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged"
      }
    },
    "lint-staged": {
      "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
        "prettier --config .prettierrc --write",
        "git add"
      ]
    },
    "jest": {
      "moduleNameMapper": {
        "^@common/(.*)": "<rootDir>/src/common/$1",
        "^@components/(.*)": "<rootDir>/src/components/$1",
        "^@utils/(.*)": "<rootDir>/src/common/utils/$1"
      }
    },
    "files": [
      "build"
    ],
    "dependencies": {
      "react": "^18.2.0",
      "react-dom": "^18.2.0",
      "react-router-dom": "^6.8.1",
      "react-scripts": "5.0.0",
      "web-vitals": "^2.1.4",
      "@ant-design/icons": "^4.7.0",
      "@kne/react-fetch": "^1.4.1",
      "@kne/remote-loader": "^1.2.3",
      "@testing-library/jest-dom": "^5.16.4",
      "@testing-library/react": "^13.1.1",
      "@testing-library/user-event": "^13.5.0",
      "antd": "5.4.0",
      "axios": "^1.3.6",
      "classnames": "^2.3.1",
      "lodash": "^4.17.21",
      "dayjs": "^1.10.7"
    },
    "devDependencies": {
      "@craco/craco": "^7.1.0",
      "@kne/craco-module-federation": "^1.1.1",
      "@kne/modules-dev": "^0.1.27",
      "http-proxy-middleware": "^2.0.3",
      "cross-env": "^7.0.3",
      "husky": "^8.0.0",
      "lint-staged": "^13.0.3",
      "prettier": "^2.7.1",
      "node-sass": "^7.0.1"
    },
    "eslintConfig": {
      "extends": [
        "react-app",
        "react-app/jest"
      ]
    }
  }
}
